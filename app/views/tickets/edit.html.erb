<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      My Dashboard
    </h1>
  </div>
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"> Edit ticket</h3>
      </div>
      <div class="panel-body">
        <%= render 'form', ticket: @ticket, action: 'update' %>
      </div>
    </div>
  </div>
</div>
<!-- /.row -->

<% content_for :special_script do %>
    <script>
        $(document).ready(function() {
            $("#validation").validate({
                rules: {
                    'ticket[title]': {
                        required: true
                    },
                    'ticket[description]': {
                        required: true
                    }
                },
                messages: {
                    'ticket[title]': {
                        required: "Title is required"
                    },
                    'ticket[description]': {
                        required: "Description is required"
                    }
                }
            });
        } );
    </script>
<% end %>