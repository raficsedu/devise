<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      My Dashboard
    </h1>
  </div>
</div>
<!-- /.row -->

<% if notice %>
    <div class="alert alert-success">
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="row">
  <br>
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"> My all support tickets</h3>
      </div>
      <div class="panel-body">
        <table id="tickets" class="display" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>SL</th>
            <th>Ticket Title</th>
            <th>Ticket Description</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Edit</th>
            <th>Details</th>
          </tr>
          </thead>
          <tbody>
          <% sl = 1 %>
          <% @tickets.each do |ticket| %>
              <tr>
                <td><%= sl %></td>
                <td><%= ticket.title %></td>
                <td><%= ticket.description.truncate_words(5) %></td>
                <td><%= ticket.status %></td>
                <td><%= ticket.created_at.strftime("%m-%d-%Y") %></td>
                <td><a href="/customers/tickets/<%= ticket.id %>/edit">Edit</a></td>
                <td><a href="/customers/tickets/<%= ticket.id %>">Details</a></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /.row -->

<% content_for :special_script do %>
    <script>
        $(document).ready(function() {
            $('#tickets').DataTable();
        } );
    </script>
<% end %>